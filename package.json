{
  "name": "homelab-cli",
  "version": "0.0.1",
  "sideEffects": false,
  "private": false,
  "license": "MIT",
  "type": "module",
  "homepage": "https://munirmardinli.github.io/homelab-cli",
  "bugs": {
    "url": "https://github.com/munirmardinli/homelab-cli/issues",
    "email": "Munir@Mardinli.de"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/munirmardinli/homelab-cli.git",
    "directory": "Munir Mardinli",
    "homepage": "https://github.com/munirmardinli/homelab-cli#readme"
  },
  "author": {
    "name": "Munir Mardinli",
    "email": "Munir@Mardinli.de",
    "url": "https://linktr.ee/munirmardinli"
  },
  "funding": {
    "type": "individual",
    "url": "https://linktr.ee/munirmardinli"
  },
  "contributors": [
    {
      "name": "Munir Mardinli",
      "email": "Munir@Mardinli.de",
      "url": "https://linktr.ee/munirmardinli"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,yml,md}": ["prettier --write", "eslint --fix"],
    "*.ts": ["tsc --noEmit"]
  },
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build --workspaces",
    "postbuild": "tsc",
    "prettier": "npm run prettier --workspaces",
    "postprettier": "prettier --write src",
    "lint": "npm run lint --workspaces && eslint src --fix",
    "postlint": "eslint src --fix",
    "typecheck": "npm run typecheck --workspaces"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@eslint/js": "^9.30.1",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-n": "^17.20.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-yml": "^1.17.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dotenv": "^17.0.1",
    "@homelab-cli/core": "file:packages/cli",
    "@homelab-cli/darwin": "file:packages/darwin",
    "@homelab-cli/eslint-config": "file:packages/eslint",
    "@homelab-cli/ssh": "file:packages/ssh"
  },
  "tsdocsOptions": {
    "changelog": true
  },
  "workspaces": [
    "packages/ssh",
    "packages/cli",
    "packages/darwin",
    "packages/eslint"
  ]
}
