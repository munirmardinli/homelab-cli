{
  "name": "@homelab/cli",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "type": "module",
  "private": false,
  "sideEffects": false,
  "bin": {
    "homelab-cli": "lib/index.js"
  },
  "files": ["lib"],
  "publishConfig": {
    "access": "public",
    "homelab-cli": "lib/index.js"
  },
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./*": {
      "import": "./lib/*.js",
      "require": "./lib/*.js"
    }
  },
  "scripts": {
    "postinstall": "tsc",
    "build": "tsc",
    "prebuild": "rm -rf lib",
    "start": "node lib/index.js -- setup",
    "prestart": "if [ ! -d lib ]; then exit 1; fi"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^17.0.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "typescript": "^5.3.3"
  }
}
