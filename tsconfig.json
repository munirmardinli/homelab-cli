{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "src",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/homelab/*": ["./src/*"],
      "dotenv": ["./node_modules/dotenv/types"]
    }
  },
  "include": ["src/**/*", "dotenv.d.ts"]
}
